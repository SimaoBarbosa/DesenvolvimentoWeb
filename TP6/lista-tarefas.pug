extends layout
block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            .w3-container
                table.w3-table-all
                    tr 
                        th Data de registo
                        th Prazo
                        th Descrição
                        th Prioridade
                        th Gerir
                    each tf in lista
                        if tf.visivel=="yes"
                            tr
                                td=tf.data
                                td=tf.prazo
                                td=tf.desc
                                td=tf.tipo
                                td  
                                    form.w3-container(action="/apagar/id_"+tf.id method="GET")
                                        button(type="submit") 
                                            b Apagar Tarefa
            footer.w3-container.w3-teal
                a(href='/index') Voltar á Página Principal
                address Gerado por ToDoApp