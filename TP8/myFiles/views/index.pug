extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-teal
        h3 MyFilesApp
      .w3-container 
        form.w3-container(id='myFileForm')
          label
            b Ficheiro
          input.w3-input.w3-border.w3-light-grey(type="file" id="ficheiro")
