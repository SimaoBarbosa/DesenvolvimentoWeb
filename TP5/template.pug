extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-blue
                h1= obra.titulo
            .w3-container
                    table.w3-table-all
                        tr 
                            th Tipo
                            td 
                                =obra.tipo
                        tr  
                            th Compositor
                            td 
                                =obra.compositor
                        tr
                            th Instrumentos
                            td
                                ul.w3-ul
                                    each inst in obra.instrumentos
                                        li
                                            =inst.nome
                                            table.w3-table-all.w3-tiny
                                                    if inst.partitura.voz
                                                        tr
                                                            th  Voz
                                                            td 
                                                                =inst.partitura.voz
                                                    if inst.partitura.clave
                                                        tr
                                                            th  Clave
                                                            td 
                                                                =inst.partitura.clave
                                                    if inst.partitura.afinacao
                                                        tr
                                                            th  Afinação
                                                            td 
                                                                =inst.partitura.afinacao
    footer.w3-container.w3-light-grey
        h4 
              a(href='http://localhost:5555') Voltar ao Índice
        address Gerado por ObrasApp
        

